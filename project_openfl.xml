<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="BabylonHx_OpenFL" package="com.babylonhx" version="1.0.0" company="Krtolica Vujadin" />
	<app main="MainOpenFL" file="BabylonHx_OpenFL" path="bin_openfl" />
	
	<window fps="60" require-shaders="true" hardware="true" depth-buffer="true" stencil-buffer="true" antialiasing="0" />
	
	<source path="src" />
	
	<!-- switch between 'dom' or 'webgl' -->
	<section if="html5">
		<haxedef name="dom" />
		<set name="dom" />
	</section>
	
	<set name="next" />
			
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="poly2trihx" />
	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flixel-ui" />
		
	<assets path="assets" exclude="*.svg" />
	<icon path="assets/lime.svg" />
	
</project>
